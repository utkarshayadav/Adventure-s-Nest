<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
	<h1>Welcome to YelpCamp!</h1>
		<p>View our scenic and serene campgrounds all over the world</p>
		<p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a></p>
</header>

<div class="row text-center" style="display: flex; flex-wrap: wrap;">		<!--to adjust the images as images are of different sizes -->
	<% campgrounds.forEach(function(campground){ %>
<div class="col-md-3 col-sm-6">
	<div class="thumbnail">
	<img src="<%= campground.image %>">	
	</div>
	<div class="caption">
	<h4><%= campground.name %></h4>	
	</div>
	<p>
		<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
	</p>
</div>
<% }); %>
</div>
	</div>

<%- include("../partials/footer") %>